{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/moayadiorg/patterns/schemas/pattern-schema.json",
  "title": "Pattern Metadata Schema",
  "description": "JSON Schema for validating pattern.yaml files in the patterns repository",
  "type": "object",
  "required": [
    "title",
    "description",
    "author",
    "category",
    "tags",
    "technologies",
    "use_case"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "The title of the pattern"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 500,
      "description": "Brief one-line description of what this pattern accomplishes"
    },
    "author": {
      "type": "object",
      "required": ["name", "email"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Author's full name"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Author's email address"
        },
        "github": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9](?:[a-zA-Z0-9]|-(?=[a-zA-Z0-9])){0,38}$",
          "description": "GitHub username"
        },
        "organization": {
          "type": "string",
          "description": "Author's organization (optional)"
        }
      },
      "additionalProperties": false
    },
    "category": {
      "type": "string",
      "enum": [
        "automation",
        "observability",
        "security",
        "monitoring",
        "integration",
        "data-protection"
      ],
      "description": "Pattern category (must match categories.config.json)"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$",
        "minLength": 1,
        "maxLength": 50
      },
      "minItems": 1,
      "maxItems": 20,
      "uniqueItems": true,
      "description": "List of tags for categorizing the pattern"
    },
    "technologies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Technology name"
          },
          "type": {
            "type": "string",
            "minLength": 1,
            "description": "Technology type or vendor"
          }
        },
        "additionalProperties": false
      },
      "minItems": 1,
      "description": "List of technologies used in the pattern"
    },
    "use_case": {
      "type": "string",
      "minLength": 1,
      "description": "Description of the use case this pattern addresses"
    },
    "architecture_diagram": {
      "type": "string",
      "pattern": "^diagrams/.*\\.(png|jpg|jpeg|svg)$",
      "description": "Relative path to the architecture diagram"
    },
    "prerequisites": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "description": "List of prerequisites needed to implement the pattern"
    },
    "implementation": {
      "type": "object",
      "properties": {
        "repo_url": {
          "type": "string",
          "format": "uri",
          "pattern": "^https://github.com/",
          "description": "GitHub repository URL"
        },
        "language": {
          "type": "string",
          "enum": [
            "javascript",
            "python",
            "java",
            "go",
            "typescript",
            "csharp",
            "ruby",
            "php",
            "rust",
            "other"
          ],
          "description": "Primary programming language"
        },
        "framework": {
          "type": "string",
          "enum": [
            "sam",
            "cdk",
            "terraform",
            "cloudformation",
            "pulumi",
            "ansible",
            "kubernetes",
            "docker",
            "other",
            "none"
          ],
          "description": "Infrastructure or application framework"
        },
        "code_snippets": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["file", "title", "description", "language"],
            "properties": {
              "file": {
                "type": "string",
                "pattern": "^implementation/",
                "description": "Relative path to the code snippet file"
              },
              "title": {
                "type": "string",
                "minLength": 1,
                "description": "Title of the code snippet"
              },
              "description": {
                "type": "string",
                "minLength": 1,
                "description": "Description of what the code snippet does"
              },
              "language": {
                "type": "string",
                "minLength": 1,
                "description": "Programming language of the snippet"
              }
            },
            "additionalProperties": false
          },
          "description": "List of code snippets included in the pattern"
        }
      },
      "additionalProperties": false
    },
    "security": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "description": "Security considerations for the pattern"
    },
    "limitations": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "description": "Known limitations of the pattern"
    },
    "related_patterns": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$",
        "minLength": 1
      },
      "uniqueItems": true,
      "description": "Related pattern IDs (kebab-case format)"
    },
    "related_plays": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$",
        "minLength": 1
      },
      "uniqueItems": true,
      "description": "Related play IDs (kebab-case format)"
    },
    "created_date": {
      "type": "string",
      "format": "date",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
      "description": "Date the pattern was created (YYYY-MM-DD)"
    },
    "last_updated": {
      "type": "string",
      "format": "date",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
      "description": "Date the pattern was last updated (YYYY-MM-DD)"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Semantic version of the pattern (e.g., 1.0.0)"
    },
    "status": {
      "type": "string",
      "enum": ["active", "deprecated", "experimental"],
      "description": "Current status of the pattern"
    }
  },
  "additionalProperties": false
}
