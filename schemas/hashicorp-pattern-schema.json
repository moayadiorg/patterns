{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.ibm.com/AdvArch/library/schemas/hashicorp-pattern-schema.json",
  "title": "HashiCorp Pattern Metadata Schema",
  "description": "JSON Schema for validating pattern.yaml files in the HashiCorp patterns repository",
  "type": "object",
  "required": [
    "title",
    "description",
    "author",
    "category",
    "tags",
    "hashicorp_products",
    "use_case"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "The title of the pattern"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 500,
      "description": "Brief description of what this pattern accomplishes"
    },
    "author": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Author's full name"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Author's email address"
        },
        "github": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9](?:[a-zA-Z0-9]|-(?=[a-zA-Z0-9])){0,38}$",
          "description": "GitHub username"
        },
        "organization": {
          "type": "string",
          "description": "Author's organization"
        }
      },
      "additionalProperties": false
    },
    "category": {
      "type": "string",
      "enum": [
        "infrastructure",
        "security",
        "networking",
        "secrets-management",
        "service-mesh",
        "automation",
        "multi-cloud"
      ],
      "description": "Pattern category focused on HashiCorp product domains"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$",
        "minLength": 1,
        "maxLength": 50
      },
      "minItems": 1,
      "maxItems": 15,
      "uniqueItems": true,
      "description": "List of tags for categorizing the pattern"
    },
    "hashicorp_products": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "enum": [
              "terraform",
              "vault",
              "consul",
              "nomad",
              "waypoint",
              "boundary",
              "packer",
              "vagrant"
            ],
            "description": "HashiCorp product name"
          },
          "version": {
            "type": "string",
            "description": "Minimum version required (e.g., 1.9.0)"
          },
          "edition": {
            "type": "string",
            "enum": ["oss", "enterprise", "hcp", "any"],
            "description": "Product edition required"
          }
        },
        "additionalProperties": false
      },
      "minItems": 1,
      "description": "HashiCorp products used in this pattern"
    },
    "provider_integrations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Provider or service name (e.g., AWS, Azure, Kubernetes)"
          },
          "type": {
            "type": "string",
            "enum": [
              "cloud-provider",
              "infrastructure",
              "platform",
              "service",
              "database",
              "monitoring",
              "other"
            ],
            "description": "Type of integration"
          },
          "version": {
            "type": "string",
            "description": "Provider version if applicable"
          }
        },
        "additionalProperties": false
      },
      "description": "External providers and integrations used"
    },
    "use_case": {
      "type": "string",
      "minLength": 1,
      "description": "Description of the use case this pattern addresses"
    },
    "architecture_diagram": {
      "type": "string",
      "pattern": "^diagrams/.*\\.(png|jpg|jpeg|svg|drawio)$",
      "description": "Relative path to the architecture diagram"
    },
    "prerequisites": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "description": "List of prerequisites needed to implement the pattern"
    },
    "implementation": {
      "type": "object",
      "properties": {
        "repo_url": {
          "type": "string",
          "format": "uri",
          "description": "Repository URL (GitHub, GitLab, etc.)"
        },
        "config_language": {
          "type": "string",
          "enum": [
            "hcl",
            "json",
            "yaml",
            "other"
          ],
          "description": "Primary configuration language"
        },
        "terraform_backend": {
          "type": "string",
          "enum": [
            "s3",
            "azurerm",
            "gcs",
            "consul",
            "kubernetes",
            "terraform-cloud",
            "local",
            "other"
          ],
          "description": "Terraform backend type if applicable"
        },
        "modules": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "source"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Module name"
              },
              "source": {
                "type": "string",
                "description": "Module source (registry, git, local)"
              },
              "version": {
                "type": "string",
                "description": "Module version constraint"
              }
            },
            "additionalProperties": false
          },
          "description": "Terraform modules used"
        }
      },
      "additionalProperties": false
    },
    "security": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Security considerations for the pattern"
    },
    "benefits": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Key benefits of implementing this pattern"
    },
    "limitations": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Known limitations of the pattern"
    },
    "related_patterns": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$",
        "minLength": 1
      },
      "uniqueItems": true,
      "description": "Related pattern IDs (kebab-case format)"
    },
    "source_reference": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["blog", "documentation", "article", "tutorial", "video", "repository"],
          "description": "Type of source material"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "URL to the source material"
        },
        "title": {
          "type": "string",
          "description": "Title of the source material"
        },
        "date": {
          "type": "string",
          "format": "date",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
          "description": "Publication date (YYYY-MM-DD)"
        }
      },
      "description": "Reference to the original source material"
    },
    "last_updated": {
      "type": "string",
      "format": "date",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
      "description": "Date the pattern was last updated (YYYY-MM-DD)"
    }
  },
  "additionalProperties": false
}
